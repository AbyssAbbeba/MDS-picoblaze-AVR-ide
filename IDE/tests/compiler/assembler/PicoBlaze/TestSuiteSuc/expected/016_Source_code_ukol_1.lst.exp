000 3002C         40     Start:              CALL      wait_1s             ; wait for peripheral startup
001 00000         41     	                LOAD      Temp1,#00           ; LEDs OFF at startup
002 2C010         42     	                OUT       Temp1,LED           ; write valu to LED register
